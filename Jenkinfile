pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }

        stage('Verifică fișierul') {
        sh '''
        if [ -f $WORKSPACE/build/index.html ]; then
            echo "Fișierul index.html există în workspace."
        else
            echo "Fișierul index.html NU există în workspace."
            exit 1
        fi
        '''
    }
}
}